// Place your key bindings in this file to override the defaults
[
    {
        "key": "tab",
        "command": "tab",
        "when": "editorTextFocus && !editorTabMovesFocus"

    },
    { "key": "cmd+shift+k", "command": "workbench.action.terminal.focusNext" },
    { "key": "cmd+shift+j", "command": "workbench.action.terminal.focusPrevious" },
    {
        "key": "cmd+enter",
        "command": "python.execSelectionInTerminal"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.terminal.focus",
        "when": "!terminalFocus"
    },
    {
        "key": "tab",
        "command": "editor.action.inlineSuggest.commit",
        "when": "textInputFocus && inlineSuggestionHasIndentationLessThanTabSize && inlineSuggestionVisible && !editorTabMovesFocus"
    },
    {
        "key": "ctrl+t c",
        "command": "extension.terminalCapture.runCapture",
        "when": "terminalFocus"
    }
]